{
  "manifest_version": 2,
  "name": "Quizlet Vocabulary",
  "homepage_url": "http://localhost/",
  "description": "A Vue Browser Extension",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": [
    "storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_title": "Quizlet Vocabulary",
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_scripts/content-script.js"]
    }
  ],
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": false,
    "open_in_tab": false
  }
}
